/// 用户
model User {
  id        String   @default(cuid()) @id
  name      String   @unique
  email     String   @default("")
  /// 年龄
  age       Int      @default(0)
  size      Float?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role?    @relation(fields: [roleId], references: [id])
  roleId    String?
}

/// 角色
model Role {
  id        String   @default(cuid()) @id
  name      String
  users     User[]
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id      String @default(cuid()) @id
  title   String
  content String
}
