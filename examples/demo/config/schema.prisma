model User {
  id        String   @default(cuid()) @id
  name      String   @unique
  email     String   @default("")
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  roleId    String?
}

model Role {
  id    String @default(cuid()) @id
  name  String @unique
  users User[]
}
