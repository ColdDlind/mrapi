{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "port": 9229,
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "args": ["run", "dev"],
      "port": 9229
    },
    {
      "name": "Current TS File",
      "type": "node",
      "request": "launch",
      "args": ["src/app.ts"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
