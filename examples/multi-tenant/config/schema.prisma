model User {
  id        String   @default(cuid()) @id
  name      String   @unique
  email     String   @default("")
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role?    @relation(fields: [roleId], references: [id])
  roleId    String?
}

model Role {
  id        String   @default(cuid()) @id
  name      String
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id      String @default(cuid()) @id
  title   String
  content String
}
