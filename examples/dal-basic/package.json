    "clean": "rm -rf dist",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node-dev --transpile-only src/schema"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mrapi/dal": "workspace:*",
    "graphql": "15.3.0",
    "@types/express": "^4.17.7",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "nexus-prisma": "0.16.2",
    "cross-env": "^7.0.2",
    "@nexus/schema": "0.15.0"
  },
  "devDependencies": {
    "@prisma/cli": "^2.4.1",
    "typescript": "^3.9.6",
    "ts-node-dev": "1.0.0-pre.51"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
