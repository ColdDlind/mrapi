{
  "compilerOptions": {
    "incremental": true,

    "outDir": "lib",
    "baseUrl": ".",

    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,

    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,

    "composite": true,
    "paths": {
      "@mrapi/common": ["packages/common/src/index.ts"],
      "@mrapi/api": ["packages/api/src/index.ts"],
      "@mrapi/dal": ["packages/dal/src/index.ts"],
      "create-mrapi-app": ["packages/create-mrapi-app/src/index.ts"]
    }
  },
  "include": ["packages", "scripts", "typings/**/*.ts"],
  "exclude": ["**/node_modules", "**/lib"]
}
