{
  "database": {
    "provider": "sqlite",
    "client": "prisma",
    "url": "file:dev.db",
    "schema": "./config/schema.prisma",
    "schemaOutput": "./prisma/schema.prisma"
  },
  "server": {
    "host": "localhost",
    "port": 1358,
    "logger": {
      "prettyPrint": true
    },
    "graphql": {
      "endpoint": "/graphql",
      "playground": "playground",
      "resolvers": {
        "generated": "../src/generated",
        "custom": "./src/resolvers"
      },
      "emitSchemaFile": "exports/schema.graphql",
      "validate": false,
      "jit": 1,
      "queryDepth": 100
    },
    "compress": { "global": false }
  },
  "security": {
    "cors": {
      "credentials": true
    }
  }
}
