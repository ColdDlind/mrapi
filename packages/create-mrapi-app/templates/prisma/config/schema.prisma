/// 用户
model User {
  id        String   @default(cuid()) @id
  name      String   @unique
  email     String   @default("")
  password  String
  /// 年龄
  age       Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role?    @relation(fields: [roleId], references: [id])
  roleId    String?
}

/// 角色
model Role {
  id        String   @default(cuid()) @id
  name      String
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
