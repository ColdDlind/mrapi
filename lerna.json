{
  "version": "independent",
  "packages": ["packages/*", "examples/*"],
  "changelog": {
    "repo": "mrapi-js/mrapi",
    "labels": {
      "feat": ":rocket: New Feature",
      "fix": ":bug: Bug Fix"
    },
    "cacheDir": ".changelog"
  },
  "command": {
    "publish": {
      "npmClient": "npm",
      "verifyAccess": false,
      "conventionalCommits": true,
      "ignoreChanges": ["*.md", "tests/*"],
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org"
    }
  }
}
